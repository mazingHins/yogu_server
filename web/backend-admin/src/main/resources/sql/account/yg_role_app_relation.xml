<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 这里namespace必须是接口的路径，不然要运行的时候要报错 “is not known to the MapperRegistry” -->
<mapper namespace="com.yogu.services.backend.admin.dao.RoleAppRelationDao">

	<!-- 新增 -->
	<insert id="save" parameterType="com.yogu.services.backend.admin.entry.RoleAppRelationPO" useGeneratedKeys="false" >
		insert into yg_admin.yg_role_app_relation (role_id,app_id) values (#{roleId},#{appId})
	</insert>

	<!-- 根据主键，删除数据 -->
	<delete id="deleteById" parameterType="Map">
		DELETE FROM yg_admin.yg_role_app_relation WHERE app_id=#{appId} AND role_id=#{roleId}
	</delete>

	<!-- 更新 -->
	<update id="update" parameterType="com.yogu.services.backend.admin.entry.RoleAppRelationPO">
		update yg_admin.yg_role_app_relation set  where app_id=#{appId} and role_id=#{roleId}
	</update>

	<!-- 根据主键读取记录（主键可能有多个） -->
	<select id="getById" parameterType="Map" resultType="com.yogu.services.backend.admin.entry.RoleAppRelationPO">
		SELECT * FROM yg_admin.yg_role_app_relation WHERE app_id=#{appId} AND role_id=#{roleId}
	</select>

	<!-- 查询全部记录 -->
	<select id="listAll" resultType="com.yogu.services.backend.admin.entry.RoleAppRelationPO">
		SELECT * FROM yg_admin.yg_role_app_relation
	</select>

	<!-- 批量新增角色应用关系 -->
	<insert id="batchAdd" >
		insert into yg_admin.yg_role_app_relation(role_id,app_id) values
		<foreach collection="list" item="item" index="index" separator=",">
			(#{item.roleId},#{item.appId})
		</foreach>
	</insert>

	<!-- 依据角色ID删除角色应用关系 -->
	<delete id="deleteByRoleId" parameterType="java.lang.Integer">
		delete from yg_admin.yg_role_app_relation where role_id = #{roleId}
	</delete>

	<!-- 依据角色ID获取角色应用关系 -->
	<select id="listByRoleId" parameterType="java.lang.Integer" resultType="com.yogu.services.backend.admin.entry.RoleAppRelationPO">
		<![CDATA[
			select * from yg_admin.yg_role_app_relation where role_id = #{roleId} order by app_id asc
		]]>
	</select>
</mapper>
